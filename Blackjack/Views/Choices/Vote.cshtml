@model Blackjack.Models.Choice

@{
    ViewBag.Title = "Vote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vote</h2>

<body>

    <form action="~/Controllers/Choices/Edit" method="post">
        <fieldset>

            @foreach (var element in ViewBag.ChoiceList)
            {
                <div>
                    <input type="checkbox" id="@element.ChoiceID" name="@element.ChoiceName" value="coding">
                    <label for="@element.ChoiceName">@element.ChoiceName</label><br /> , @*@element.EventDateLocal*@
                    <a href="https://www.stubhub.com/@element.URL"><img src="@element.imageURL" width="200" height="200" /></a>
                </div>
            }

            <button type="submit">Submit</button>
        </fieldset>
    </form>

    <div>
        @Html.ActionLink("Submit your completed request", "../UserChoices/UserChoices")
    </div>

</body>
